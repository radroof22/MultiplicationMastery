<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elo.multiplicationmastery.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/multiplication_mastery"
        android:id="@+id/titleText"
        android:textSize= "30sp"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/accent_material_light" />

    <Button
        android:id="@+id/btnToQuiz"

        android:text="Quiz"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="goToQuiz"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btnToTables"

        android:text="Tables"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="goToTable"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/btnToQuiz"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
