<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/probleText"
        android:layout_row="1"
        android:layout_column="9"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorAccent"
        android:layout_below="@+id/space3"
        android:layout_alignEnd="@+id/btnHome"
        android:textSize="38sp" />

    <Button
        android:id="@+id/choice1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="but1Click"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:layout_alignEnd="@+id/choice3"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/choice2"
        android:onClick="but2Click"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/choice1"
        android:layout_alignParentEnd="true" />

    <Button

        android:id="@+id/choice3"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/choice1"
        android:onClick="but3Click"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal" />


    <Button

        android:id="@+id/choice4"
        android:layout_alignTop="@+id/choice3"
        android:layout_alignParentEnd="true"
        android:onClick="but4Click"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scoreTVH"
        android:gravity="center_vertical|center_horizontal"
        android:background="#608204"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Home"
        android:id="@+id/btnHome"
        android:onClick="goHome"
        android:textColor="#fef60d"
        android:textSize="20sp"

        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="10px"
        android:layout_below="@+id/scoreTVH"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space3" />

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_alignTop="@+id/probleText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="245dp" />

</RelativeLayout>